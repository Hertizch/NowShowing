#!/usr/bin/with-contenv sh

PUID=${PUID:-99}
PGID=${PGID:-100}

groupmod -o -g "$PGID" xyz
usermod -o -u "$PUID" xyz
chown -R xyz:xyz /opt/config
echo "
-----------------------------------------
              NowShowing
-----------------------------------------
          Brought to you by:
          
 _  _ _     _   _                    
| \| (_)_ _| |_| |_                  
| .' | | ' \  _| ' \                 
|_|\_|_|_||_\__|_||_|                
__      __    _ _                    
\ \    / /_ _| | |_____ _ _          
 \ \/\/ / _' | | / / -_) '_|         
  \_/\_/\__,_|_|_\_\___|_|           
   _                                 
 _| |_                               
|_   _|                              
  |_|                                
  ___                  ___         _ 
 / __|_ _ _____ ___  _| _ \___  __| |
| (_ | '_/ _ \ \ / || |  _/ _ \/ _' |
 \___|_| \___/_\_\\_, |_| \___/\__,_|
                   |__/                            
-----------------------------------------
User xyz uid set to:  $(id -u xyz)
User xyz gid set to:  $(id -g xyz)
-----------------------------------------
"
