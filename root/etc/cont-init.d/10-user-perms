#!/usr/bin/with-contenv sh

PUID=${PUID:-99}
PGID=${PGID:-99}

groupmod -o -g "$PGID" xyz
usermod -o -u "$PUID" xyz

echo "
--------------------------------------------
  _  _  _       _    _                      
 | \| |(_) _ _ | |_ | |_                    
 | .` || || ' \|  _|| ' \                   
 |_|\_||_||_||_|\__||_||_|                  
 __      __      _  _                       
 \ \    / /__ _ | || |__ ___  _ _           
  \ \/\/ // _` || || / // -_)| '_|          
   \_/\_/ \__,_||_||_\_\\___||_|            
               _                            
             _| |_                          
            |_   _|                         
   ___        |_|            ___          _ 
  / __| _ _  ___ __ __ _  _ | _ \ ___  __| |
 | (_ || '_|/ _ \\ \ /| || ||  _// _ \/ _` |
  \___||_|  \___//_\_\ \_, ||_|  \___/\__,_|
                       |__/                 
--------------------------------------------
GID/UID
-------------------------------------
User uid:    $(id -u abc)
User gid:    $(id -g abc)
-------------------------------------
"
chown xyz:xyz /config
